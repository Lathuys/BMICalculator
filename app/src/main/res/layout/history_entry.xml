<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/heightEntryTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HEIGHT"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/massEntryTV"
        app:layout_constraintEnd_toStartOf="@+id/dateEntryTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/massEntryTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MASS"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bmiEntryTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heightEntryTV" />

    <TextView
        android:id="@+id/dateEntryTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:textAlignment="textEnd"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bmiEntryTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/heightEntryTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bmiEntryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="BMI"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/massEntryTV"
        app:layout_constraintTop_toBottomOf="@id/dateEntryTV" />


</androidx.constraintlayout.widget.ConstraintLayout>